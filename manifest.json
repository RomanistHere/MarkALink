{
	"name": "NotaWay - A Notable Way",
	"short_name": "NotaWay",
	"version": "0.0.1",
	"description": "Mark a link",
	"permissions": [
		"unlimitedStorage",
		"activeTab",
	    "storage",
	    "tabs",
	    "http://*/",
	    "https://*/",
	    "contextMenus"
	],
	"content_scripts": [
		{
			"js":         [ "content/content.js" ],
			"css":        [ "content/content.css" ],
			"matches":    [ "<all_urls>" ],
			"all_frames": true,
			"run_at":     "document_end"
		}
	],
	"options_ui": {
		"page": "options/options.html",
		"open_in_tab": true
	},
	"background": {
		"page": "background/background.html"
	},
	"page_action": {
		"default_popup": "popup/popup.html",
		"default_title": "NotaWay - Click to open",
		"default_icon": {
			"16": "images/logo16.png",
			"32": "images/logo32.png",
			"48": "images/logo48.png",
			"128": "images/logo128.png"
		}
	},
	"icons": {
		"16": "images/logo16.png",
		"32": "images/logo32.png",
		"48": "images/logo48.png",
		"128": "images/logo128.png"
	},
	"content_security_policy": "script-src 'self'; object-src 'self'",
	"manifest_version": 2
}

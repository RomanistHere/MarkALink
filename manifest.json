{
	"name": "MarkALink",
	"short_name": "MarkALink",
	"version": "0.0.1",
	"description": "Mark a link",
	"permissions": [
		"unlimitedStorage",
		"activeTab",
	    "storage",
	    "tabs",
	    "http://*/",
	    "https://*/",
	    "contextMenus"
	],
	"content_scripts": [
		{
			"js":         [ "datepicker/index.js", "content/helpers.js", "content/popup.js", "content/dom.js", "content/content.js" ],
			"css":        [ "datepicker/index.css", "content/popup.css", "content/logo.css", "content/content.css" ],
			"matches":    [ "<all_urls>" ],
			"all_frames": true,
			"run_at":     "document_end"
		}
	],
	"web_accessible_resources": [
		"fonts/NEON.ttf",
	    "fonts/Godsownjunkyard-Regular.otf"
	],
	"options_ui": {
		"page": "options/options.html",
		"open_in_tab": true
	},
	"background": {
		"page": "background/background.html"
	},
	"browser_action": {
		"default_popup": "popup/popup.html",
		"default_title": "MarkALink - Click to open",
        "default_icon": {
            "16": "images/logo128.png",
            "32": "images/logo128.png",
            "48": "images/logo128.png",
            "128": "images/logo128.png"
        }
	},
	"icons": {
        "16": "images/logo128.png",
        "32": "images/logo128.png",
        "48": "images/logo128.png",
        "128": "images/logo128.png"
    },
	"content_security_policy": "script-src 'self'; object-src 'self'",
	"manifest_version": 2
}

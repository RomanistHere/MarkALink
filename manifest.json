{
	"name": "MarkALink - Mark a link",
	"short_name": "MarkALink",
	"version": "0.0.1",
	"description": "Mark a link",
	"permissions": [
		"unlimitedStorage",
		"activeTab",
	    "storage",
	    "tabs",
	    "http://*/",
	    "https://*/",
	    "contextMenus"
	],
	"content_scripts": [
		{
			"js":         [ "content/helpers.js", "content/content.js" ],
			"css":        [ "content/content.css" ],
			"matches":    [ "<all_urls>" ],
			"all_frames": true,
			"run_at":     "document_end"
		}
	],
	"options_ui": {
		"page": "options/options.html",
		"open_in_tab": true
	},
	"background": {
		"page": "background/background.html"
	},
	"browser_action": {
		"default_popup": "popup/popup.html",
		"default_title": "MarkALink - Click to open"
	},
	"content_security_policy": "script-src 'self'; object-src 'self'",
	"manifest_version": 2
}
